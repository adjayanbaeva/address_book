@{
  Layout = "_Layout";
}

<div class="container">
  <h2>Address Book</h2>
  <h3>Create a New Contact</h3>

  <form action="/contacts" method="post">
    <label for="contact-name">Contact Name</label>
    <input id="contact-name" name="contact-name" type="text">
    <label for="contact-address">Contact Address</label>
    <input id="contact-address" name="contact-address" type="text">
    <label for="contact-phone">Contact Phone Number</label>
    <input id="contact-phone" name="contact-phone" type="text">
    <button  class="btn btn-danger" type="submit">Submit</button>
  </form>
</div>
